<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings"
    android:background="@drawable/bgsplash">
    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/setting_toolbar">

    </include>
    <de.hdodenhof.circleimageview.CircleImageView
app:civ_border_width="2dp"
        app:civ_border_color="#ffffff"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/userimage"
        android:src="@drawable/userpic"
        android:layout_alignParentTop="true"
   android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
    />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/setusername"
        android:inputType="textMultiLine"
        android:hint="Username"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/bg_register"
        android:background="@drawable/textfielld"
        android:textAlignment="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="15dp"
        android:layout_marginTop="330dp"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/set_status"
        android:inputType="textMultiLine"
        android:hint="Hi I am On CoderText"
        android:drawableLeft="@drawable/ic_contact_mail_black_24dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/bg_register"
        android:background="@drawable/textfielld"
        android:textAlignment="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="15dp"
        android:layout_marginTop="400dp"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/Update"
      android:text="Update"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/resetbutton"
        android:textAlignment="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="15dp"
        android:textColor="#ffffff"
        android:layout_marginTop="480dp"
        />

    <Button
        android:id="@+id/editname"
        android:layout_width="39dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="330dp"
        android:layout_marginEnd="26dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/edit" />

    <Button
        android:id="@+id/editstatus"
        android:layout_width="39dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="399dp"
        android:layout_marginEnd="19dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/edit" />


</RelativeLayout>