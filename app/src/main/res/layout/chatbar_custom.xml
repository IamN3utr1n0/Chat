<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_chat"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/userfreinds"
        android:cropToPadding="true"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/Custom_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_image_chat"

        android:layout_alignParentStart="true"
        android:layout_marginStart="74dp"
        android:layout_marginTop="0dp"
        android:text="Username"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Custom_profile_lastseen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Custom_profile_name"

        android:layout_alignStart="@+id/Custom_profile_name"
        android:layout_marginTop="7dp"
        android:text="Last seen: "
        android:textColor="#ffffff"
        android:textSize="18sp" />



</RelativeLayout>