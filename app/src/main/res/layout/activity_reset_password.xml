<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPassword"
    android:background="@drawable/bgreset">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/spl"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="100dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="200dp"
        android:fontFamily="sans-serif-medium"
        android:text="Forgot Pasword?"
        android:textColor="#ffffff"
        android:textSize="40sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="270dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center"
        android:text="We just need your registered Email Id to send you password reset instructions." />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="340dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="30dp"
        android:text="Enter your Email" />
    <EditText
        android:id="@+id/Emailreset"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="20dp"
       android:background="@drawable/textfielld"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        android:textSize="18sp"
        android:textStyle="normal" />
    <Button
        android:id="@+id/resetbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="450dp"
        android:background="@drawable/resetbutton"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:elevation="3dp"
        android:outlineAmbientShadowColor="#053383"
        android:paddingLeft="25dp"
        android:text="Reset Password"
        android:textColor="#ffffff" />
    <TextView
        android:id="@+id/backreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="550dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="170dp"
        android:text=" Back" />



</RelativeLayout>




