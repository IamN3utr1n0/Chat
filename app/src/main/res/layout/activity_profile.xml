<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@drawable/loginback">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:background="@drawable/newx">
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/visit_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:background="@drawable/userfreinds"
        android:elevation="10dp"
        android:shadowColor="#ffffff"
     />
    <TextView
        android:id="@+id/visit_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:elevation="10dp"
        android:shadowColor="#ffffff"
        android:text="Username"
        android:layout_marginTop="330dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/visit_user_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:text="Hey I'm using CodersText        app"
        android:layout_marginTop="390dp"
        android:gravity="center"
        android:elevation="10dp"
        android:shadowColor="#ffffff"
       />

    <Button
        android:id="@+id/send_msg_req_button"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="530dp"
        android:background="@drawable/button"
        android:elevation="10dp"
        android:shadowColor="#ffffff"
        android:text="Send Message"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/decline_msg_req_button"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="610dp"
        android:background="@drawable/button"
        android:elevation="10dp"
        android:shadowColor="#ffffff"
        android:text="Cancel Request"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:visibility="invisible" />


</RelativeLayout>